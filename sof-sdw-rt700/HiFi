# Use case Configuration for skl-hda-card

SectionVerb {

	EnableSequence [
		cdev "hw:sofsdwrt700"
		cset "name='PGA1.0 1 Master Playback Volume' 80"
		cset "name='DAC Front Playback Volume' 87"
		cset "name='HPO Mux' 0"
		cset "name='Headphones Switch' 1"
		cset "name='ADC 22 Mux' 'MIC2'"
		cset "name='ADC 09 Capture Volume' 63"
		cset "name='ADC 09 Capture Switch' 1"
		cset "name='AMIC Volume' 1"
		
	]

	DisableSequence [
		cdev "hw:sofsdwrt700"
	]
}

SectionDevice."Headphone" {
	Comment "Headphone"

	Value {
		PlaybackPCM "hw:sofsdwrt700,0"
		PlaybackChannels "2"
	}
}

SectionDevice."Microphone" {
	Comment "Headset Mic"

	Value {
		CapturePCM "hw:sofsdwrt700,1"
		CaptureChannels "2"
	}
}

